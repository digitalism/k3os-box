{
  "variables": {
    "iso_url": "https://github.com/rancher/k3os/releases/download/v0.9.1/k3os-amd64.iso",
    "iso_checksum": "32d6a9475532a3ddd55baa886e84ae8a0aaa8bd949b96ef4341e78180f5b8af7"
  },
  "builders": [{
    "type": "virtualbox-iso",
    "boot_wait": "40s",
    "boot_command": ["rancher","<enter>","wget --no-check-certificate http://{{ .HTTPIP }}:{{ .HTTPPort }}/cloud-config.yml","<enter>","sudo k3os install","<enter>","1","<enter>","y","<enter>","cloud-config.yml","<enter>","y","<enter>"],
    "http_directory": ".",
    "guest_os_type": "Linux_64",
    "iso_url": "{{user `iso_url`}}",
    "iso_checksum": "{{user `iso_checksum`}}",
    "iso_checksum_type": "sha256",
    "ssh_username": "vagrant",
    "ssh_private_key_file": "packer/vagrant-ssh-default.pem",
    "ssh_wait_timeout":"1000s",
    "disk_size": "8000",
    "shutdown_command": "sudo halt",
    "post_shutdown_delay": "10s",
    "format":"ova"
  }],
  "provisioners":[
    {
      "type": "shell",
      "execute_command": "{{ .Vars }} sudo -E sh '{{ .Path }}'",
      "inline": ["rm -rf /var/lib/rancher/k3s", " rm /home/vagrant/VBoxGuestAdditions.iso", "echo provision done"]
    }
  ],
  "post-processors": [
    {
      "type": "vagrant",
      "keep_input_artifact": false,
      "output": "k3os_{{.Provider}}.box"
    }
  ]
}

